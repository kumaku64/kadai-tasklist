<div class="text-center">
  <h1>Sign in</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(scope: :session, url: login_path, method: :post) do |f| %>



      <div class="mb-3">
        <%= f.label :email, 'Email' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>



      <%= f.submit 'Sign in(login)', class: 'btn btn-primary w-100' %>
    <% end %>
    
    <%= link_to "Sign up", signup_path %>
  </div>
</div>
